          .container
            br
            figure(class="image is-128x128 animated pulse", style="margin-bottom: -10px")
                img(class="image", src="/assets/graphic.png") 
            br
            h1.title(style="font-weight: bold") <strong>wushi</strong>
            h2.subtitle A sushi-themed social bot with a unique economy system.
            if user 
              a.button.is-link.is-light.is-medium(href="/invite", style="margin-right: 8px") <i class="fas fa-user-plus"></i>&nbsp;Invite
              a.button.is-link.is-light.is-medium(href="/vote", style="margin-right: 8px") <i class="fas fa-check"></i>&nbsp;Vote 
              a.button.is-link.is-light.is-medium(href="/commands") <i class="fas fa-book"></i>&nbsp;Commands  
            else 
              a.button.is-link.is-light.is-medium(href="/invite", style="margin-right: 8px") <i class="fas fa-user-plus"></i>&nbsp;Invite
              a.button.is-link.is-light.is-medium(href="/support", style="margin-right: 8px") <i class="fab fa-discord"></i>&nbsp;Support Server  
