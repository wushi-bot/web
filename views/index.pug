            if user
              span 
              a.navbar-brand(href="/", style="margin-left: 6px")
                figure(class="image is-48x48")
                  img(class="is-rounded", src=avatar) 
                a.navbar-item(href="#", style="margin-right: -22px") <strong>#{user.username}##{user.discriminator}</strong>
